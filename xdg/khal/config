[calendars]

[[time-blocking]]
path = ~/.calendar/time-blocking
type = calendar
color = dark green

[[time-blocking-malakal]]
path = ~/.calendar/time-blocking-malakal
type = calendar
color = yellow

[default]
default_calendar = time-blocking
# highlight_event_days = yes

[keybindings]
left = left, h, ctrl b
down = down, j, ctrl n
up = up, k, ctrl p
right = right, l, ctrl f
save = ctrl enter

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M
