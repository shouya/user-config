profile "single" {
  output "eDP-1" enable mode 1920x1080 position 0,0
}

profile "multihead-beside" {
  output "eDP-1" enable mode 1920x1080 position 0,270 scale 1.5
  output "DP-1" enable mode 3840x2160@60Hz position 1280,0 scale 2.0
}

profile "clamshell" {
	output "eDP-1" disable
	output "DP-1" enable mode 3840x2160@60Hz position 0,0 scale 2.0
}
